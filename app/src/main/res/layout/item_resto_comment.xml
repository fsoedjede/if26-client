<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/comment_user_image"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_gravity="top"
        android:contentDescription="@string/hello_world"
        android:maxWidth="50dp"
        android:src="@drawable/user_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_user_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/comment_user_rate"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_gravity="end|top"
                android:layout_marginTop="@dimen/activity_little_padding"
                android:layout_marginEnd="@dimen/activity_little_padding"
                android:layout_marginRight="@dimen/activity_little_padding"
                android:numStars="5"
                android:stepSize="1"
                android:rating="4"
                android:isIndicator="true" />

            <TextView
                android:id="@+id/comment_user_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:gravity="center|start"
                android:text="@string/comment_user_date" />

        </LinearLayout>

        <TextView
            android:id="@+id/comment_user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_user_comment" />
    </LinearLayout>
</LinearLayout>