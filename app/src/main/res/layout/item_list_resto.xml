<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:id="@+id/list_item_resto"
    android:weightSum="1">

    <TextView
        android:id="@+id/resto_description"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="end"
        android:minLines="4"
        android:lines="6"
        android:singleLine="false"
        android:text="@string/content_resto_description" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/resto_picture"
            android:layout_width="85dp"
            android:layout_height="86dp"
            android:scaleType="fitCenter"
            android:layout_gravity="end"
            android:contentDescription="@string/content_resto_picture"
            android:src="@drawable/resto_128" />

        <ImageView
            android:id="@+id/resto_rate"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom|end"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:contentDescription="@string/content_resto_rate"
            android:src="@drawable/star_rating_five" />

    </LinearLayout>
</LinearLayout>